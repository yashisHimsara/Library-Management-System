            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="btnPluse" layoutX="52.0" layoutY="189.0" mnemonicParsing="false" onAction="#btnPlusOnAction" prefHeight="30.0" prefWidth="25.0" style="-fx-background-color: lightblue;" text="+" />
      <TextField fx:id="textID" layoutX="50.0" layoutY="94.0" prefHeight="26.0" prefWidth="179.0" promptText="Id" />
