        </columns>
      </TableView>
      <Button fx:id="btnDelete" layoutX="341.0" layoutY="174.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="30.0" prefWidth="159.0" style="-fx-background-color: f0e68c;" text="Delete">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button fx:id="btnSave" layoutX="114.0" layoutY="174.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="30.0" prefWidth="159.0" style="-fx-background-color: #04AA6D;" text="Save">
